bootstrap.servers={{ bootstrap_servers.split() | join(',') }}
auto.offset.reset=earliest
partition.assignment.strategy=org.apache.kafka.clients.consumer.RoundRobinAssignor
group.id={{ group_id_consumer }}
exclude.internal.topics={{ exclude_internal_topics }}
client.id={{ client_id_consumer }}

####### Security Layer #######
security.protocol=SSL
ssl.truststore.location={{ ssl.path }}/{{ kafka_security.client.truststore }}
ssl.truststore.password={{ keypass }}
ssl.truststore.type=JKS
